<% layout("/layouts/boilerplate") %>
<style>
    #filters{
        display: flex;
        flex-wrap:wrap;
        justify-content: space-evenly;
        align-items: center;
    }
   .filter{
    text-align: center;
    margin-right:2rem;
    margin-top:2rem;
   }

   .filter p{
    font-size: 0.8rem;
   }

   .filter a{
    text-decoration: none;
    color:black;
    opacity: 0.7;
   }

   .filter a:hover{
    opacity: 1;
    cursor:pointer;
   }

   .tax-switch{
        border: 0.1px solid rgba(0, 0, 0, 0.638);
        border-radius:1rem;
        padding:1rem;
   }

   .tax-info{
    display: none;
   }
</style>

    <div id="filters">
        <div class="filter">
            <a href="/listings/category/Fort">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Fort</p>
            </a>
        </div>

        <div class="filter">
            <a href="/listings/category/Temple">
            <div><i class="fa-solid fa-hands-praying"></i></div>
            <p>Temple</p>
            </a>
        </div>

        <div class="filter">
            <a href="/listings/category/Garden">
            <div><i class="fa-solid fa-tree"></i></div>
            <p>Garden</p>
            </a>
        </div>

        <div class="filter">
            <a href="/listings/category/Palace">
            <div><i class="fa-solid fa-place-of-worship"></i></i></div>
            <p>Palace</p>
            </a>
        </div>

        <div class="filter">
            <a href="/listings/category/Wildlife">
            <div><i class="fa-solid fa-paw"></i></div>
            <p>Wildlife</p>
            </a>
        </div>

        <div class="filter">
            <a href="/listings/category/Lake">
            <div><i class="fa-solid fa-water"></i></div>
            <p>Lake</p>
            </a>
        </div>

        <div class="filter">
            <a href="/listings/category/Monument">
            <div><i class="fa-solid fa-landmark-dome"></i></div>
            <p>Monument</p>
            </a>
        </div>

        <div class="filter">
            <a href="/listings/category/Museum">
            <div><i class="fa-solid fa-landmark"></i></div>
            <p>Museum</p>
            </a>
        </div>

        <div class="filter">
            <a href="/listings/category/cafe">
            <div><i class="fa-solid fa-mug-saucer"></i></div>
            <p>Cafe</p>
            </a>
        </div>

        <div class="tax-switch">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Dislay Total after taxes</label>
              </div>
        </div>
    </div>


        <!-- <h3>All Listings</h3> -->
        <!-- <form method="get" action="/listings/new">
        <button>New listing</button>
    </form> -->

        <div class="row row-cols-lg-3 row-cols-sm-1 row-cols-md-2">
            <% for(Listing of allListings){ %>
                <a href="/listings/<%=Listing._id%>" class="listing-link">
                    <div class="card listing-card col">
                        <img src="<%=Listing.image.url%>" class="card-img-top " alt="image" style="height: 18rem;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text"><b>
                                    <%= Listing.title %>
                                </b><br>
                                &#8377;<%= Listing.price.toLocaleString("en-IN") %> /person
                                <i class="tax-info">&nbsp;  &nbsp;+ %18 GST</i>
                            </p>
                        </div>
                    </div>
            </a>
            <%}%>
        </div>


<script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click",()=>{
        let taxInfo = document.getElementsByClassName("tax-info");
        for(Info of taxInfo){
            if(Info.style.display != "inline"){
                Info.style.display = "inline";
            }else{
                Info.style.display = "none";
            }
        }
    })
</script>